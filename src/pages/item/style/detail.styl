@import "../../../assets/variables.styl"
.fixPb.fixPb
  padding-bottom 1.5rem
.detail
  overflow hidden
  padding-bottom 1rem
  &_activityIcon
    position absolute
    z-index 3
    width 1.6rem
  &_hd
    position fixed
    top 0
    padding .18rem .32rem
    background-color $mainColor
    width 100%
    box-sizing border-box
    display flex
    justify-content space-between
    z-index 4
    &_context
      color #fff
      font-size .32rem
      .logo
        background url('https://static.paranoidsqd.com/images/goods/logo.png') no-repeat
        width .38rem
        height .38rem
        background-size contain
        margin-right .18rem
        vertical-align text-bottom
      .title
        line-height .6rem
    &_btn
      color #fff
      font-size .28rem
      padding .14rem .3rem
      line-height 1
      box-sizing border-box
      border 1px solid #FFFFFF
      border-radius 1rem
  &_video
    width 7.5rem
    height 4.2rem
    &_icon
      width 1.49rem
      height 1.49rem
      position absolute
      z-index 3
      padding 1.35rem 3rem
  &_activity
    	   width 100%
    	   height .6rem
    	   line-height .6rem
    	   color #FFFFFF
    	   font-size .24rem
    	   background #F46B6A
  &_img
    &_context
      position absolute
      width 7.5rem
      height 4.2rem
      background-color rgba(#000, 0.3)
      display flex
      align-items flex-end
      &_name
        color $whiteColor
        padding 0 .32rem .4rem
        font-size .44rem
        font-weight bold
    &_img
      width 7.5rem
      height 4.2rem
      object-fit cover
  &_banner
    height 7.5rem
    position reletive
    &_img
      width 100%
      height 7.5rem
      object-fit cover
  &_content
    background-color #fff
    padding .24rem .32rem
    margin-bottom .2rem
    &_td
      display flex
      justify-content flex-start
      align-items center
      margin .22rem 0 .27rem 0
      &_header
        width .88rem
        height .88rem
        border-radius 50%
        margin-right .2rem
        object-fit cover
      &_content
        &_title
          font-size .28rem
          color $mainColor1
          font-weight bold
        &_context
          font-size .24rem
          color $mainColor2
    &_title
      color $mainColor0
      font-size .32rem
      line-height .45rem
      margin-bottom .12rem
      height .9rem
      overflow hidden
    &_subtitle
      font-size .28rem
      color $mainColor2
      line-height .4rem
      max-height 1.2rem
      overflow hidden
      margin-bottom .24rem
     &_cells
    	  .weui_cells:before
    	   border-top 0
    	  .weui_cells:after
    	   	border-bottom none
      .weui_cells_access
      	margin-top 0
      	.weui_cell
      	 padding 0
      .weui_cell_ft
        color #F46B6A
        font-size .28rem
       .weui_cell_ft:after
        border-color #F46B6A
    &_share
      display flex
      justify-content space-between
      align-items center
      color $subColor
      &_context
        font-size .28rem
      &_iconl,
      &_icons
        font-size .48rem
      &_iconl
        margin-right .18rem
    &_hd
      display flex
      justify-content space-between
      margin-bottom .04rem
      color $mainColor
      align-items center
      .price
        font-size .32rem
        color $subColor
        &--now_i
          font-size .48rem
        &--discount
          font-size .28rem
          color $mainColor2
          margin-right .08rem
        &--name
          font-size .28rem
          color $mainColor2
      &_btn
        display flex
        justify-content space-between
        .icon-share,
        .icon-link
          font-size .48rem
          vertical-align -webkit-baseline-middle
        .icon-link
          margin-right .18rem
          font-size .48rem
      .share
        font-size .28rem
        color $subColor
    &_cell
   	   margin-bottom 0.08rem
    	  .weui_cells:before
    	   border-top 0
    	  .weui_cells:after
    	   	border-bottom none
      .weui_cells
      	margin-top 0
      	.weui_cell
      	 padding 0 0 0 4.2rem
      .weui_cell_ft
        color #F46B6A
        font-size .28rem
       .weui_cell_ft:after
        border-color #F46B6A
    &_fd
      padding-top .14rem
      margin-top .1rem
      .abroad,
      .express,
      .agent
        font-size .22rem
        line-height .3rem
        color $mainColor2
        margin-top .1rem
        &_icon
          font-size .18rem
          padding .015rem .065rem
          border-radius .05rem
          color #fff
          background-color $subColor
          margin-right .05rem
          vertical-align middle
        &_arrow
          &:after
            content " "
            display inline-block
            transform rotate(45deg)
            height 6px
            width 6px
            border-width 1px 1px 0 0
            border-color currentColor
            border-style solid
            position relative
            top 4px
  &_details
    background-color #fff
    &_title
      padding .32rem
      font-size .28rem
      color $mainColor2
      line-height .4rem
    &_content
      width 7.5rem
      img
        width 7.5rem
        height auto
        display block
  &_inner
    &_hd
      background-color $whiteColor
      display flex
      justify-content space-between
      padding 0 1.09rem
      box-sizing border-box
      width 100%
      z-index 3
      &_tab
        font-size .28rem
        padding .22rem .22rem .2rem
        font-weight bold
        color $mainColor0
      .active
        color $mainColor
        border-bottom 2px solid $mainColor
    &_bd
      width 7.5rem
      background-color $whiteColor
      &_fixed
        margin-top .9rem
      img
        width 7.5rem
        height auto
        display block
  &_change
    visibility hidden
    padding .2rem
    background-color $whiteColor
    &_actived
      visibility visible
    &_hd
      color $whiteColor
      background-color $mainColor
      border-radius 1rem
      font-size .28rem
      padding .16rem .3rem
      line-height .28rem
  &_bar
    position fixed
    bottom 0
    z-index 2
    width 100%
    &_tips
      font-size .24rem
      line-height .33rem
      padding .12rem 0 .15rem 0
      color #fff
      &--coming
        background-color $subColor
      &--over
        background-color $subColor
      &--activity
        color $mainColor
        margin-left .21rem
    &_content
      box-shadow inset 0 1px 0 0 rgba(0,0,0,0.08)
      display flex
      justify-content space-between
      font-size 0
      &_icon
        width 2.7rem
        display flex
        justify-content space-between
        padding .13rem .48rem .05rem
        box-sizing border-box
        background-color #fff
        .icon-cart,
        .icon-home
          color $mainColor2
          display block
          font-size .48rem
          vertical-align middle
        .icon-home
          font-size .44rem
          margin-bottom .08rem
        .icon-cart
          position relative
          .counts
            font-size .18rem
            position absolute
            background-color $subColor
            color #fff
            line-height 1
            width .25rem
            height .25rem
            border-radius 50%
            right -.06rem
            top -.05rem
        &_context
          font-size .18rem
          margin-top .05rem
          line-height .25rem
          color $mainColor2
      &_btn
        display flex
        justify-content space-between
        .cart,
        .bought,
        .disabled
          font-size .32rem
          color #fff
          line-height 1rem
          display block
          vertical-align middle
          text-align center
          box-sizing border-box
        .cart
          width 2.4rem
          background-color $mainColor
          box-shadow inset 0 1px 0 0 rgba(0,0,0,0.08)
          &:active
            color hsla(0,0%,100%,.6)
            background-color darken($mainColor,10%)
        .bought
          border-left 1px solid #fff
          width 2.4rem
          background-color $mainColor
          box-shadow inset 0 1px 0 0 rgba(0,0,0,0.08)
          &:active
            color hsla(0,0%,100%,.6)
            background-color darken(#098F94,10%)
        .coming
          color hsla(0,0%,100%,.6)
        .disabled
          width 4.8rem
          background-color $mainColor1
.mask
  &_bg
    position fixed
    top 0
    left 0
    bottom 0
    right 0
    z-index 3
    background-color rgba(0, 0, 0, 0.6);
    display flex
    justify-content center
    align-items flex-end
  &_content
    background-color #fff
    width 100%
    padding .32rem
    box-sizing border-box
    &_hd
      display flex
      justify-content space-between
      padding 0 0 .32rem 0
      .item
        &_info
          display flex
          &_pic
            width 1.6rem
            height 1.6rem
            object-fit cover
            margin-right .24rem
          &_detail
            display flex
            flex-direction column
            font-size .24rem
            color $mainColor2
            .price
              color $subColor
              font-size .28rem
            .stock
              margin .12rem 0
        &_cancel
          &_btn
            position relative
            display inline-block
            transform rotate(45deg)
            right .1rem
            &:before, &:after
              content " "
              position absolute
              top 50%
              left 50%
              transform translate(-50%, -50%)
              background-color $mainColor2
            &:before
              width .4rem
              height .02rem
            &:after
              width .02rem
              height .4rem
    &_bd
      .item_spec
        padding .32rem 0
        box-sizing border-box
        &_title
          color $mainColor2
          font-size .28rem
        .flex
          display flex
          flex-wrap wrap
        &_li
          .value
            font-size .28rem
            line-height .4rem
            padding .12rem .32rem
            margin .32rem .24rem 0 0
            border-radius .08rem
            background-color $mainColor4
            color $mainColor0
            box-sizing border-box
            &:last-child
              margin-right 0
          .sold-out.sold-out
            color $mainColor2
          .active.active
            color #fff
            background-color $subColor
      .count
        display flex
        justify-content space-between
        .disabled
          border 1px solid $mainColor4
          &:before, &:after
            background-color $mainColor4
        &_reduce
          position relative
          border 1px solid $mainColor2
          background-color transparent
          padding .02rem .145rem .02rem .14rem
          font-size .28rem
          &:before, &:after
            content " "
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)
            background-color $mainColor2
          &:before
            width .22rem
            height .02rem
        &_count
         display inline-block
         width .92rem
         text-align center
         font-size .28rem
         line-height .4rem
         color $mainColor0
         margin 0 .24rem
        &_add
          position relative
          border 1px solid $mainColor2
          background-color transparent
          padding .02rem .145rem .02rem .14rem
          font-size .28rem
          &:before, &:after
            content " "
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)
            background-color $mainColor2
          &:before
            width .22rem
            height .02rem
          &:after
            width .02rem
            height .22rem
    &_fd
      margin .08rem 0
      .weui_btn
        font-size .32rem
        line-height .88rem
  &_scale
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    background-color rgba(#000, 0.6)
    align-items center
    justify-content center
    z-index 4
    &_img
      width 7.5rem
      object-fit cover
      margin auto
      position absolute
      top 50%
      left 50%
      -webkit-transform translate(-50%,-50%)
      -ms-transform translate(-50%,-50%)
          transform translate(-50%,-50%)

.bigbang_icon.bigbang_icon
  width 1.35rem
.bigbang_btn.bigbang_btn
  width 6.15rem
