.invite{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.invite .invite-img{
  width: 352rpx;
  height: 248rpx;
  margin-top: 78rpx;
  margin-bottom: 26rpx;
}

.invite .invite-tit{
  font-weight:600;
  color:rgba(59,59,59,1);
  font-size: 32rpx;
  margin-bottom: 26rpx;
}

.invite .invite-txt{
  font-size: 24rpx;
  width: 602rpx;
  display: inline-block;
  color:rgba(178,178,178,1);
  margin-bottom: 40rpx;
  text-align: center;
}

.invite .invite-btn{
  border: 0;
  outline: none;
  width:678rpx;
  height:100rpx;
  line-height:100rpx;
  background-color:rgba(0,164,162,1);
  border-radius:10rpx;
  color:rgba(255,255,255,1);
  font-size:32rpx;
  letter-spacing:1px;
}

.invite .invite-cash{
  font-size: 28rpx;
  color:rgba(59,59,59,1);
  line-height: 40rpx;
  height: 40rpx;
  margin-top: 60rpx;
  margin-bottom: 4rpx;
}

.invite .invite-cash-num{
  font-size:36rpx;  
  color:rgba(59,59,59,1);
  height:50rpx;
  line-height:50rpx;
  margin-bottom: 68rpx;
}

.invite .invite-user{
  width:682rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 2rpx 8rpx 0px rgba(0,0,0,0.13);
  border-radius:16rpx;
  margin-bottom: 20rpx;
}
.invite .invite-user .invited-txt{ 
  height:40rpx;
  font-size:28rpx;  
  color:rgba(59,59,59,1);
  line-height:40rpx;
  letter-spacing:1px;
  margin-top: 28rpx;
  margin-bottom: 48rpx;
  text-align: center;
}
.invite .invite-user .users .users-show{
  height: 72rpx;
  padding: 0 56rpx;
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
}
.invite .invite-user .users .users-show .users-l{
  height: 72rpx;
  width: 72rpx;
  margin-right: 26rpx;
  background-color:rgba(255,255,255,1);
  box-shadow:0px 2rpx 8rpx 0px rgba(0,0,0,0.14);
  border-radius: 50%;
}
.invite .invite-user .users .users-show .users-r{
  font-size:20rpx; 
  color:rgba(59,59,59,1);
}