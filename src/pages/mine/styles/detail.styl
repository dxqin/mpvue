@import "../../../assets/variables.styl"
.detail
  box-sizing border-box
  position relative
  background-color $backColor
  margin-bottom 88rpx
  section
    background-color #fff
  &_s
    margin-bottom .2rem
  &_status.detail_status
    margin-bottom .2rem
    padding .4rem .32rem .34rem .4rem
    color #fff
    font-size .28rem
    width 7.5rem
    box-sizing border-box
    background url(https://xwc-static-prd.oss-cn-hangzhou.aliyuncs.com/static/bg.png) no-repeat
    background-size cover
    .order
      &_status
        padding-bottom .65rem
        .status
          font-size .48rem
          line-height .64rem
          position relative
          &:after
            content " "
            width 1rem
            height 1px
            position absolute
            background-color #fff
            top .94rem
            bottom 0
            left 0
        .custom-service
          border 1px solid #FFFFFF
          border-radius 1rem
          padding .16rem .3rem
          line-height 1
          float right
      &_num
        line-height .4rem
        margin-bottom .12rem
      &_num,
      &_time
        .title
          width 1.48rem
          display inline-block
  &_address,
  &_count,
  &_express
    margin 0 0 .2rem 0
    padding 0 0 0 .32rem
    font-size .28rem
    line-height .33rem
    &_hd
      padding .32rem .32rem .32rem 0
      color $mainColor2
      .edit
        color $mainColor
    &_none
      padding-bottom .4rem
      .content
        text-align center
        margin 0 .8rem 0 .48rem
        padding .4rem 0
        color $mainColor
        border 1px dashed $mainColor3
        border-radius .08rem
    &_bd
      padding-bottom .2rem
      &_title
        display inline-block
        color $mainColor2
        min-width 140rpx
        margin-right .24rem
      &_content
        color $mainColor0
      .commission
        color $subColor
      .total
        color $mainColor
    &_bb
      padding-bottom .32rem
  &_express
    &_bd
      padding-bottom 0
      &_content
        position relative
        color $mainColor
        padding 0 0 .24rem .44rem
        margin-left .12rem
        border-left .04rem solid $mainColor4
        .line
          border-left .04rem dotted $mainColor4
          height .28rem
          position absolute
          left -.03rem
          top -.14rem
        .circle
          width .16rem
          height .16rem
          background-color $mainColor
          border-radius 50%
          position absolute
          left -.17rem
          border .08rem solid rgba(255,255,255,0.67);
        .context
          font-size .28rem
          line-height .4rem
          margin-bottom .12rem
        .time
          font-size .24rem
          line-height .29rem
  &_goods
    &_header
      color $mainColor2
      padding .32rem .32rem 0 .32rem
      line-height .4rem
      font-size .28rem
    &_content
      padding .32rem 0 .24rem 0
      display flex
      margin-left .32rem
      .pic
        width 220rpx
        height 220rpx
        object-fit cover
        margin-right .18rem
      .info
        display flex
        flex-direction column
        justify-content space-between
        width 4.48rem
        &_title
          overflow hidden
          max-height .8rem
          font-size .28rem
          margin-bottom .16rem
          line-height .4rem
          text-overflow ellipsis
          display -webkit-box
          -webkit-line-clamp 2
          -webkit-box-orient vertical
        &_count
          font-size .24rem
          line-height .28rem
          color $mainColor2
          padding-top .08rem
        &_tips
          color $mainColor2
          font-size .22rem
          line-height .26rem
          margin-top .08rem
          &_abroad
            font-size .16rem
            padding .015rem .065rem
            border-radius .05rem
            color #fff
            background-color $subColor
            margin-right .05rem
            vertical-align top
        &_status
          color $mainColor
          display flex
          justify-content space-between
          &_count
            line-height .33rem
            color $mainColor1
            margin-left 20rpx
          &_discount
            color $mainColor2
            font-size .24rem
          &_btn
            font-size .28rem
          .tips
            color $mainColor2
    &_info
      padding .4rem .32rem
      color $mainColor2
      font-size .28rem
      line-height .4rem
      .btn
        color $mainColor
        margin-left .32rem
      .warn
        color $subColor
  &_order
    margin 0 0 .2rem 0
    padding .24rem .32rem
    font-size .28rem
    &_express
      margin-bottom .12rem
    &_express,
    &_count
      .title
        color $mainColor2
      .content
        width 1.15rem
        display inline-block
      .value
        color $mainColor
  &_cancel
    color $subColor
    font-size .32rem
    margin-bottom .9rem
    &_btn
      padding .22rem 0
      &:active
        background-color darken(#fff,5%)
        color hsla(0,0,100%,.6)
  &_pay
    font-size .32rem
    background-color #fff
    position fixed
    bottom 0
    width 100%
    display flex
    justify-content space-between
    box-sizing border-box
    &_hd
      display flex
      justify-content space-between
      width 5.1rem
      padding .16rem .24rem
      .title
        font-size .28rem
      .value
        color $mainColor
      .express
        color $mainColor2
        font-size .24rem
        display inline-block
        margin 0 .4rem 0 .18rem
      .tips
        color $subColor
        font-size .2rem
        line-height 1
        display inline-block
        padding-top .04rem
      .tips_check
        font-size .24rem
        line-height .56rem
        color $mainColor1
    &_btn
      width 2.4rem
      line-height .88rem
      background-color $mainColor
      color #fff
      &:active
        background-color darken($mainColor,10%)
        color hsla(0,0,100%,.6)
      .load3
        vertical-align text-top
