.update{
  padding: 0 20rpx;
}

.update .update-con{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.update .update-con .username{
  height:44rpx;
  margin-top:58rpx;
  margin-bottom:60rpx;
  border: 0;
  width: 100%;
}

.update .update-con span{
  display: inline-block;
  width: 100%;
  line-height: 46rpx;
  height: 46rpx;
  border-top: 1rpx solid #F3F3F3;
}

.update .update-con .btn{
  margin-top: 78rpx;
  width:714rpx;
  height:100rpx;
  line-height:100rpx;
  background:rgba(0,164,162,1);
  border-radius:10rpx;
  text-align: center;
  color: #fff;
}
