.list{
  font-size : 28rpx;
  line-height : 33rpx;
}

.list .list-tabs{
  background-color:#fff;
  display : flex;
  justify-content : space-between;
  padding: 0 40rpx;
  width: 100%;
  box-sizing :border-box;
  border-bottom: 2rpx solid #E6E6E6;
  margin-bottom: 44rpx;
}

.active{
  color: #00A4A2;
  border-bottom :2px solid #00A4A2;
}

.list .list-tabs-tab{ 
  padding : 24rpx 0;
  font-size: 24rpx;
}

.list .list-orders-item-outer{
  width:100%;
  height:424rpx;
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

.list .list-orders-item{
  width:710rpx;
  height:424rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 2rpx 8rpx 0rpx rgba(0,0,0,0.13);
}

.list .list-orders-item-header{
  line-height : 58rpx;
  height : 58rpx;
  color : rgba(160,160,160,1);
  font-weight : 500;
  border-bottom : 1px solid #F3F3F3;
  padding-left: 28rpx;
}

.list .list-orders-item-content{
  display : flex;
  padding: 20rpx 28rpx;
}    

.list .list-orders-item-content img{
  width: 153rpx;
  height:152rpx;
  margin-right:24rpx;
}

.list .info .info-title{
  height: 40rpx;
  line-height: 40rpx;
  margin-block-end: 2rpx;
  width: 478rpx;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #3B3B3B;
}

.list .info  .info-name{
  max-width: 400rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.list .info .info-subtitle{
  width: 200rpx;
  height: 56rpx;
  color:rgba(59,59,59,1);
  line-height:28rpx;
  font-size: 20rpx;
  margin-bottom: 18rpx;
}

.list .info .info-num{
  height: 40rpx;
  color:rgba(180,180,180,1);
  line-height:40rpx;
  font-size: 28rpx;
  margin-bottom: 28rpx;
  text-align:right;
}

.list .info .info-num-price{
  height:44rpx;
  line-height:44rpx;
  font-size:24rpx; 
  color:rgba(59,59,59,1);
  margin-top: 28rpx;
  margin-bottom: 36rpx;
  text-align: right;
}

.list .info .product{
  height: 50rpx;
  display: flex;
  justify-content: flex-end;
}

.list .info .product .count2{
  border: 0;
  width:142rpx;
  height:60rpx;
  line-height:60rpx;
  border-radius:10rpx;
  border:2rpx solid rgba(0,164,162,1);
  color: rgba(0,164,162,1);
  font-size: 24rpx;
  text-align: center;
}